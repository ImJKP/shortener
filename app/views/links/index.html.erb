
<h1>Listing links</h1>

<table>
  <tr>
    <th>Short Path</th>
    <th>Original URL</th>
    <!-- <th>Http status</th> -->
    <th></th>
    <th></th>
    <th></th>
    <th>Visit Count</th>
  </tr>

<% @links.each do |link| %>
  <tr>
    <td><%= link_to link.short_path, go_link_path(link) %></td>
    <td><%= link_to link.original_url %></td>
    <!-- <td><%= link.http_status %></td> -->
    <td><%= link_to 'Show', link %></td>
    <!-- <td><%= link_to 'Edit', edit_link_path(link) %></td> -->
    <td><%= link_to 'Destroy', link, confirm: 'Are you sure?', method: :delete %></td>
    <td><%= link.visit_count %></td>
  </tr>
<% end %>
</table>

